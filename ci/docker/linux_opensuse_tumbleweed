FROM opensuse/tumbleweed
RUN \
  zypper ref && \
  zypper -n update && \
  zypper -n install \
  diffutils \
  git \
  icu \
  make \
  meson \
  perl-IPC-Run \
  shadow \
  systemd-devel \
  util-linux \
  util-linux-systemd \
  \
  bison \
  ccache \
  clang \
  flex \
  gcc \
  gcc-c++ \
  gettext-runtime \
  ninja \
  \
  libicu-devel \
  libldapcpp-devel \
  liblz4-devel \
  libopenssl-devel \
  libuuid-devel \
  libxml2-devel \
  libxslt-devel \
  llvm-devel \
  pam-devel \
  python38-devel \
  readline-devel \
  tcl-devel \
  \
  openldap2 \
  openldap2-client \
  \
  krb5-client \
  krb5-devel \
  krb5-plugin-kdb-ldap \
  krb5-server && \
  zypper cc
# Fixing libperl.so not found error
RUN \
  find /usr/lib/ -name libperl.so -exec ln -sf '{}' /usr/lib64/libperl.so ';'
# Fixing ICU errors caused by locale being set to 'POSIX' 
ENV LANG=en_US.UTF-8 LANGUAGE=en_US:en LC_ALL=en_US.UTF-8
